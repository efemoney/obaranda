<resources>

  <style name="RoundedFrameLayoutDefault">
    <item name="android:topLeftRadius">4dp</item>
    <item name="android:topRightRadius">4dp</item>
    <item name="android:bottomRightRadius">4dp</item>
    <item name="android:bottomLeftRadius">4dp</item>
  </style>

  <style name="Widget.Toolbar" parent="Widget.AppCompat.Toolbar">
    <item name="titleTextAppearance">@style/TextAppearance.Toolbar.Title</item>
    <item name="subtitleTextAppearance">@style/TextAppearance.Toolbar.Subtitle</item>
  </style>

  <style name="TextAppearance.Toolbar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
    <item name="android:fontFamily">@font/din_medium</item>
    <item name="android:textSize">24sp</item>
  </style>

  <style name="TextAppearance.Toolbar.Subtitle" parent="TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
    <item name="android:fontFamily">@font/din_medium</item>
  </style>

  <style name="TextAppearance.Title.Collapsed" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
    <item name="android:textColor">@color/dark_grey_blue</item>
    <item name="android:textSize">24sp</item>
  </style>

  <style name="TextAppearance.Title.Expanded" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
    <item name="android:textColor">@color/dark_grey_blue</item>
    <item name="android:textSize">24sp</item>
  </style>

</resources>
