<resources>


  <style name="Base.AppTheme.Light" parent="Theme.AppCompat.Light.NoActionBar">

    <item name="colorAccent">@color/accent</item>

    <item name="toolbarStyle">@style/Widget.Toolbar</item>
    <item name="navigationBackgroundColor">@color/navigation_light</item>

    <item name="android:fontFamily">@font/din_regular</item>
    <item name="android:windowBackground">@color/window_light</item>

    <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    <item name="android:statusBarColor">@color/black_20</item>
    <item name="android:navigationBarColor">@color/black_20</item>

  </style>

  <style name="Base.AppTheme" parent="Theme.AppCompat.NoActionBar">

    <item name="colorAccent">@color/accent</item>

    <item name="toolbarStyle">@style/Widget.Toolbar</item>
    <item name="navigationBackgroundColor">@color/navigation_dark</item>

    <item name="android:fontFamily">@font/din_regular</item>
    <item name="android:windowBackground">@color/window_dark</item>

    <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    <item name="android:statusBarColor">@color/black_54</item>
    <item name="android:navigationBarColor">@color/black_54</item>

  </style>


  <style name="AppTheme" parent="Base.AppTheme" />

  <style name="AppTheme.Light" parent="Base.AppTheme.Light" />


  <style name="AppThemeOverlay.ActionBar" parent="ThemeOverlay.AppCompat.ActionBar" />

  <style name="AppThemeOverlay.Popup" parent="ThemeOverlay.AppCompat" />


</resources>